{
  "Jwt": {
    "Key": "YourSuperSecretKey_ChangeThisInProduction!",
    "Issuer": "YourApp",
    "Audience": "YourAppUsers",
    "TokenExpiryHours": 1
  },
  "Cors": {
    "AllowedOrigins": [ "https://localhost:3000" ]
  },
  "RateLimiting": {
    "Global": {
      "PermitLimit": 10,
      "WindowInMinutes": 1,
      "QueueLimit": 2
    }
  },
  "SecurityHeaders": {
    "ContentSecurityPolicy": "default-src 'self'",
    "XContentTypeOptions": "nosniff",
    "XFrameOptions": "DENY"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
